<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAbout"
    tools:context=".AboutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:stateListAnimator="@null"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAbout"
            android:elevation="0dp"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/ivJatengprov"
        android:layout_below="@+id/tvJatengprov"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jatengprov"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tvSetda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="SEKRETARIAT DAERAH"
        android:textColor="@color/colorText2"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/tvJatengprov"
        android:layout_below="@+id/tvSetda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="PROVINSI JAWA TENGAH"
        android:textSize="21sp"
        android:textColor="@color/colorText2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvApk"
        android:layout_below="@+id/ivJatengprov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Aplikasi"
        android:textColor="@color/colorText1"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvABK"
        android:layout_below="@+id/tvApk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analisis Beban Kerja"
        android:textColor="@color/colorText1"
        android:textSize="18sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvVer"
        android:layout_below="@+id/tvABK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Versi 1.3"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvCreated"
        android:layout_below="@+id/tvVer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Dibuat oleh"
        android:textColor="@color/colorText1" />

    <TextView
        android:id="@+id/tvCreator"
        android:layout_below="@+id/tvCreated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nico Munasatya and Pranestya Gaung W"
        android:textColor="@color/colorText1" />

    <TextView
        android:id="@+id/tvCopyright"
        android:layout_below="@+id/tvCreator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Â© 2020"
        android:textColor="@color/colorText1" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bg"
        android:scaleType="fitXY"/>

</RelativeLayout>
