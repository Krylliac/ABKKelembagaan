<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="16dp"
        android:id="@+id/cv_uraian_tugas"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorCardSecond">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:id="@+id/tvUraianTugas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uraian Tugas"
                android:textSize="14sp"
                android:textColor="@color/colorText1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/uraian_tugas"
                    android:layout_weight="3."
                    android:layout_below="@id/tvUraianTugas"
                    android:text="ini siapa"
                    android:justificationMode="inter_word"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText2"/>
                <ImageView
                    android:id="@+id/hapus_uraian"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_btn_delete"
                    android:tint="@color/colorText2"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>
                <ImageView
                    android:id="@+id/edit_uraian"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/colorText2"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>